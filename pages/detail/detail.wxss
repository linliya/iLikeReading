/* pages/detail/detail.wxss */
.detail-header {
  display: flex;
  justify-content: center;
  background: #388c86;
  padding-bottom: 30rpx;
  color: #fff;
}

.detail-header-img {
  width: 260rpx;
  height: 320rpx;
}

.detail-content {
  padding: 20rpx 40rpx;
}
.detail-info {
  display: flex;
  justify-content: space-between;
}

.detail-info .detail-score {
  min-width: 100rpx;
  color: #8d8d8d;
  font-size: 28rpx;
  line-height: 68rpx;
}

.detail-info text {
  display: block;
  font-size: 24rpx;
  color: #8d8d8d;
  line-height: 48rpx;
}
.detail-info .title {
  font-size: 48rpx;
  color: #000;
  line-height: 68rpx;
}

.detail-summary, .author-summary {
  padding-top: 20rpx;
  box-shadow: 0 0 20rpx #ddd;
  margin: 20rpx 0;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}
.detail-summary text, .author-summary text {
  color: #8d8d8d;
  font-size: 28rpx;
}