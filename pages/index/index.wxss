/**index.wxss**/
.search-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  padding: 10rpx 0;
  background: #388c86;
  z-index: 2;
}
.search-container input {
  padding: 16rpx;
  background: #fff;
  margin: 0rpx 20rpx;
  border-radius: 8rpx;
}

.search-container icon {
  position: absolute;
  top: 0rpx;
  right: 20rpx;
  padding: 30rpx;
  z-index: 2;
}

.scroll-container {
  margin-top: 100rpx;
}
.scorll-view-container {
  margin: 0 20rpx;
}
.books-count {
  margin: 30rpx 0;
  color: #388c86;
  font-size: 28rpx;
}
.books-container {
  margin-top: 20rpx;
}
.books-container image {
  width: 200rpx;
  height: 240rpx;
}
.book-item {
  display: flex;
  margin-bottom: 20rpx;
}
.book-info {
  width:calc(100% - 240rpx);
  padding: 0 20rpx;
}
.book-info text {
  display: block;
}
.book-title, .book-author, .book-publisher {
  width:calc(100% - 40rpx); 
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.book-author, .book-publisher {
  color: #8d8d8d;
  font-size: 24rpx;
  padding-top: 20rpx;
}
